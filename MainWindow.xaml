<Window x:Class="SciChartExport.MainWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Title="SciChart | FIFO (Scrolling) Charts" xmlns:example="clr-namespace:SciChart.Examples.Examples.CreateRealtimeChart">

    <Grid>
        <Grid.RowDefinitions>

            <RowDefinition Height="25"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Button Height="20" VerticalAlignment="Center" Margin="5,0,5,0" Click="HighFrequencyButton_Click">High Frequency</Button>
            <Button Height="20" VerticalAlignment="Center" Margin="5,0,5,0" Click="LotsOfSeriesButton_Click">Lots of series</Button>
            <Button Height="20" VerticalAlignment="Center" Margin="5,0,5,0" Click="FiftySeries">Fifty series</Button>
        </StackPanel>

        <ContentControl Grid.Row="1" x:Name="content">
        </ContentControl>
    </Grid>   
</Window>